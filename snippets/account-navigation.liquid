{%- comment -%}
Account Navigation
Basic menu for the account pages

Version
1.0.0 - 2020/03/25
{%- endcomment -%}

{%- capture customerLevel -%}
  {%- render 'tool.skin-customer-level' -%}
{%- endcapture -%}

{% assign customerLevel = customerLevel | plus: 0 %}

<nav class="c-account-navigation" data-account-navigation>
  <p class="c-account-navigation__heading o-heading--7">
    {{- 'customer.account.navigation_heading' | t -}}
  </p>
  <ul class="c-account-navigation__list">
    <li class="c-account-navigation__list-item">
      <a href="{{ routes.account_url }}" class="c-account-navigation__link o-link
          {% if request.path == routes.account_url %}is-active{% endif %}" data-account-navigation-toggle>
        {{- 'customer.account.profile' | t -}}
      </a>
    </li>

    {%- comment -%} if Client has access to Community {%- endcomment -%}
    {%- if customerLevel > 0 -%}
      <li class="c-account-navigation__list-item">
        <a href="{{ communityUrl }}" class="c-account-navigation__link o-link is-active">
          {{ communityLabel }}
        </a>
      </li>
    {%- endif -%}

    <li class="c-account-navigation__list-item">
      <a href="{{ routes.account_addresses_url }}" class="c-account-navigation__link o-link
          {% if request.path == routes.account_addresses_url %}is-active{% endif %}" data-address-menu-item>
        {{- 'customer.account.addresses' | t -}}
      </a>
    </li>
    <li class="c-account-navigation__list-item">
      <a href="{{ routes.account_url }}#account-orders" class="c-account-navigation__link o-link
          {% if request.path contains 'orders' %}is-active{% endif %}" data-orders-navigation-toggle>
        {{- 'customer.account.orders' | t -}}
      </a>
    </li>
    <li class="c-account-navigation__list-item">
      <a href="{{ routes.account_logout_url }}" class="c-account-navigation__link o-link">
        {{- 'customer.account.logout' | t -}}
      </a>
    </li>
  </ul>
</nav>