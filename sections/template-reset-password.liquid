{{ 'sections.account-template.css' | asset_url | stylesheet_tag }}
{{ 'sections.login-template.css' | asset_url | stylesheet_tag }}

<div class="c-account">
  <div class="c-account__header">
    <div class="c-account__header-inner">
      <h1 class="c-account__header-heading">
        {{ 'customer.reset_password.title' | t }}
      </h1>
    </div>
  </div>
  <div class="c-account__inner">
    {% form 'reset_customer_password' %}


      <p class="o-heading--7">{{ 'customer.reset_password.subtext' | t: email: email }}</p>

      {{ form.errors | default_errors }}

      <div class="o-form__input-group">
        <input type="password"
          name="customer[password]"
          id="ResetPassword"
          class="o-input c-login-register__input {% if form.errors contains 'password' %}input-error{% endif %}"
          placeholder="{{ 'customer.reset_password.password' | t }}">
      </div>

      <div class="o-form__input-group">
        <input type="password"
          name="customer[password_confirmation]"
          id="PasswordConfirmation"
          class="o-input c-login-register__input {% if form.errors contains 'password_confirmation' %}input-error{% endif %}"
          placeholder="{{ 'customer.reset_password.password_confirm' | t }}">
      </div>

      <button class="o-btn is-primary" type="submit" class="button">{{ 'customer.reset_password.submit' | t }}</button>
    {% endform %}
  </div>
</div>

