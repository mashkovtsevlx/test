{% comment %}
  Password Template
    Template that will be displayed when the site is in password protected mode

  Version:
    1.0.0 - 2018/10/31
{% endcomment %}

{%- layout 'password' -%}

<div class="c-template-password">
  <header class="c-template-password__header" itemscope itemtype="http://schema.org/Organization">
    
    <div class="c-template-password__header-inner">  
      <div class="c-template-password__header-logo">  
        {%- render 'svg.logo' -%}
      </div>

      <h1 class="c-template-password__header-heading">{{ 'general.password_page.opening_soon' | t }}</h1>
    </div>
  </header>
  <div class="c-template-password__main-container">
    <section class="c-template-password__login">
      <h4 class="o-subtitle">{{ 'general.password_page.login_form_heading' | t }}</h4>
      {%- form 'storefront_password' -%}
        {{- form.errors | default_errors -}}
        <label for="password" class="c-template-password__label o-heading--7">
          {{ 'general.password_page.login_form_password_label' | t }}
        </label>

        <div >
            <input type="password"
              class="o-input c-template-password__input"
              name="password"
              placeholder="{{ 'general.password_page.login_form_password_placeholder' | t }}"
              value=""
              autocomplete="off"
            />

          <button class="o-btn is-primary" type="submit" name="commit">
            <span>{{ 'general.password_page.login_form_submit' | t }}</span>
          </button>
        </div>
      {% endform %}
      <p class="c-template-password__login-message">{{ 'general.password_page.admin_link_html' | t }}</p>
    </section>

    <section class="c-template-password__register">
      {%- form 'customer' -%}
        {{- form.errors | default_errors -}}
        {%- if form.posted_successfully? -%}
          <div>{{ 'general.password_page.signup_form_success' | t }}</div>
        {%- else -%}
          <h4 class="o-subtitle">{{ 'general.password_page.signup_form_heading' | t }}</h4>
          <input type="hidden" name="contact[tags]" value="prospect, password page">
          <input type="hidden" name="customer[accepts_marketing]" value="" />

          <label for="email" class="c-template-password__label o-heading--7">
            {{ 'general.password_page.signup_form_email_label' | t }}
          </label>

          <div >
              <input type="email"
                class="o-input c-template-password__input"
                name="contact[email]"
                spellcheck="false"
                autocomplete="off"
                autocapitalize="off"
                placeholder="{{ 'general.password_page.signup_form_email_placeholder' | t }}"
              />
            <button type="submit"  name="commit" class="o-btn is-primary">
              <span>{{ 'general.password_page.signup_form_submit' | t }}</span>
            </button>

          </div>
        {% endif %}
      {% endform %}
    </section>


    <footer class="c-template-password__footer">
      <p class="c-template-password__footer-brand">
        &copy; {{ 'now' | date: "%Y" | escape }} {{ shop.name | escape }}


        <a href="//processcreative.com.au" class="o-link c-template-password__footer-process">
          Site <em>by</em> Process
        </a>
      </p>
    </footer>

  </div>

</div>
